{% extends 'base.html.twig' %}

{% block title %}login!{% endblock %}

{% block body %}
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-7 align-self-center">
                                            <div class="p-3">
                                                {% if error %}
                                                    <div style ="color:red">
                                                        Credenciales invalidas
                                                    </div>
                                                {% endif %}
                                                <h2 class="mb-2">Acceder</h2>
                                                <form action= {{ path('app_login') }} method="post">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                <input class="floating-input form-control" type="text" placeholder=" " id="username" name="_username">
                                                                <label>Usuario</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                <input class="floating-input form-control" type="password" placeholder=" " id="password" name="_password">
                                                                <label>Contrase√±a</label>
                                                            </div>
                                                        </div>   
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Acceder</button>
                                                    <p class="mt-3">
                                                        Crear una cuenta <a href= {{path ('app_users_new')}} class="text-primary">Registrarse</a>
                                                    </p>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="assets/images/login/01.png" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
{% endblock %}